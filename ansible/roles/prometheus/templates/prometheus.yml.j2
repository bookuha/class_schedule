global:
  scrape_interval: 15s  # Default scrape interval

scrape_configs:
  - job_name: 'ec2-node-exporter'
    ec2_sd_configs:
      - region: 'eu-north-1'
      - port: 9100
    relabel_configs:
      - source_labels: [__meta_ec2_tag_Role]
        action: keep
        regex: .*node-exporter.*  # Match if "node-exporter" is part of the Role tag
      - source_labels: [__meta_ec2_private_ip]
        action: replace
        target_label: __address__
        replacement: ${1}:9100

  - job_name: 'ec2-cloudwatch-exporter'
    ec2_sd_configs:
      - region: 'eu-north-1'
      - port: 9106
    relabel_configs:
      - source_labels: [__meta_ec2_tag_Role]
        action: keep
        regex: .*cloudwatch-exporter.*
      - source_labels: [__meta_ec2_private_ip]
        action: replace
        target_label: __address__
        replacement: ${1}:9106

  - job_name: 'ec2-nginx-exporter'
    ec2_sd_configs:
      - region: 'eu-north-1'
      - port: 9113
    relabel_configs:
      - source_labels: [__meta_ec2_tag_Role]
        action: keep
        regex: .*nginx-exporter.*
      - source_labels: [__meta_ec2_private_ip]
        action: replace
        target_label: __address__
        replacement: ${1}:9113
